<div class="container">
  <h1>Listing books</h1>

  <%= link_to 'New book', new_book_path %>

  <table>
    <tr>
      <th>Name</th>
      <th>作者</th>
      <th>Summary</th>
      <th></th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.writer.name %></td>
        <td><%= book.summary %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
      </tr>
    <% end %>
  </table>
</div>