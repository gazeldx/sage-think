<div class="container">
  <%= form_with(model: @book, local: true) do |form| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@book.errors.count, "error") %> prohibited
          this book from being saved:
        </h2>
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">书名</label>
      <div class="col-sm-10">
        <%= form.text_field :name, class: "form-control", placeholder: "书名" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="desc" class="col-sm-2 col-form-label">作者</label>
      <div class="col-sm-10">
        <%= form.select(:writer_id, options_for_select(Writer.all.pluck(:name, :id)), {}, {class: 'required'}) %>
      </div>
    </div>

    <div class="form-group row">
      <label for="summary" class="col-sm-2 col-form-label">描述</label>
      <div class="col-sm-10">
        <%= form.text_area :summary, class: "form-control", placeholder: "描述", rows: 3 %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">修改书籍信息</button>
      </div>
    </div>
  <% end %>
</div>
